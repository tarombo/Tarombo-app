<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="3dp"
	app:cardElevation="5dp"
	app:cardUseCompatPadding="true"
	app:contentPadding="8dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/comparison_photo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:visibility="gone"
				app:srcCompat="@drawable/manichino" />

			<TextView
				android:id="@+id/comparison_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/comparison_photo"
				android:textSize="22sp" />

			<TextView
				android:id="@+id/comparison_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/comparison_title"
				android:layout_toLeftOf="@id/comparison_photo"
				android:ellipsize="end"
				android:maxLines="6"
				android:singleLine="false"
				android:textSize="18sp" />

			<TextView
				android:id="@+id/comparison_subtext"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/comparison_text"
				android:layout_toLeftOf="@id/comparison_photo"
				android:singleLine="false"
				android:layout_marginTop="5dp"
				android:visibility="gone"/>

		</RelativeLayout>

		<include
			android:id="@+id/comparison_date"
			layout="@layout/change_date_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>


</androidx.cardview.widget.CardView>